<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_view"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">
        >
        <!--  ListRow Left sied Thumbnail image -->

        <ImageView
            android:layout_marginLeft="4dp"
            android:id="@+id/subject_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/biology_icon" />

        <!-- Title Of Song-->
        <TextView
            android:id="@+id/txtView_Topic_TopicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/subject_icon"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/subject_icon"
            android:text="Rihanna Love the way lie"
            android:textColor="#040404"
            android:textSize="15dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/txtView_performance_TopicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtView_Topic_TopicList"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/subject_icon"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_marginLeft="16dp"
            android:text="Just gona stand there and ..."
            android:textColor="#343434"
            android:textSize="10dp" />

        <!-- Rightend Duration -->
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/txtView_Topic_TopicList"
            android:gravity="right"
            android:text="5:45"
            android:layout_marginRight="5dip"
            android:textSize="10dp"
            android:textColor="#10bcc9"
            android:textStyle="bold"/>

        <!-- Rightend Arrow -->
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_below="@+id/duration"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@android:drawable/ic_lock_lock" />
    </RelativeLayout>
</RelativeLayout>